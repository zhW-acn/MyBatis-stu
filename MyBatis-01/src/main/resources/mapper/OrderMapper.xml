<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.9//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.OrderDao">

    <resultMap id="oMap" type="bean.relation.Order">
        <id column="id" property="id"/>
        <result column="name" property="oName"/>
    </resultMap>

    <select id="selectAllOrders" resultMap="oMap">
        select *
        from `order`
    </select>
</mapper>